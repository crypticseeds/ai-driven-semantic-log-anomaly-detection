# Frontend Environment Configuration
# Copy this file to .env.local and update the values as needed

# Backend API URL
# If not set, the frontend will auto-detect based on the current hostname
# Examples:
#   Development: http://localhost:8000
#   Production: https://api.yourdomain.com
#   Docker: http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Sentry Configuration (optional)
# Get these from your Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Development Settings
# Set to 'development' for additional debugging
NODE_ENV=development